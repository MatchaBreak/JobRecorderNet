<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobRecorderNet</title>

    <link href="~/css/tailwind.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!--<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />  -->
    <link rel="stylesheet" href="~/JobRecorderNet.styles.css" asp-append-version="true" />

    <style>
        .nav-links::-webkit-scrollbar {
            display: none;
        }
    </style>
</head>
<body class="bg-gray-50 flex flex-col">
    <!-- Sticky Navigation, still not working -->
    <header class="sticky z-50 bg-blue-100 shadow-md rounded-xl mx-auto w-[100%] mt-2">
        <div class="flex items-center justify-between flex-wrap px-4 py-2">
            <nav class="nav-links flex overflow-x-auto whitespace-nowrap gap-2 py-2">
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="Home" asp-action="Index"><i class="fa fa-home mr-2"></i>Home</a>
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="User" asp-action="Index"><i class="fa fa-users mr-2"></i>Users</a>
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="Home" asp-action="Clients"><i class="fa fa-user mr-2"></i>Clients</a>
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="Home" asp-action="Addresses"><i class="fa fa-map-marker mr-2"></i>Addresses</a>
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="Home" asp-action="Jobs"><i class="fa fa-briefcase mr-2"></i>Jobs</a>
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="Home" asp-action="MyJobs"><i class="fa fa-folder-open mr-2"></i>My Jobs</a>
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="Home" asp-action="TRCs"><i class="fa fa-file-text mr-2"></i>TRCs</a>
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="Home" asp-action="Licences"><i class="fa fa-id-card mr-2"></i>Licences</a>
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="Home" asp-action="MyLicences"><i class="fa fa-id-card mr-2"></i>My Licences</a>
                <a class="text-gray-800 font-semibold hover:text-blue-600 hover:bg-white rounded px-3 py-2 transition flex items-center"
                   asp-controller="Home" asp-action="Privacy"><i class="fa fa-shield-alt mr-2"></i>Privacy</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex h-full w-full p-2">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t text-gray-500 text-sm text-center py-4 hidden">
        &copy; 2025 - JobRecorderNet - <a class="text-blue-500 hover:underline" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Scroll position persistence
        const navLinks = document.querySelector('.nav-links');
        document.addEventListener('visibilitychange', function () {
            if (document.visibilityState === 'hidden') {
                localStorage.setItem('navScrollPos', navLinks.scrollLeft);
            }
        });
        window.addEventListener('load', function () {
            const savedPos = localStorage.getItem('navScrollPos');
            if (savedPos !== null) {
                navLinks.scrollLeft = savedPos;
            }
        });
    </script>
</body>
</html>
