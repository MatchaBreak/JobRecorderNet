@model JobRecorderNet.Models.User

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="flex flex-col items-center w-full">
        <div class="w-full pb-3 rounded-lg pt-6">
            <div class="flex justify-between items-center">
                <h1 class="text-3xl font-semibold">Create User</h1>
                <a class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 transition duration-300"
                    asp-action="Index">Back to Users</a>
            </div>
        </div>

        <div class="w-full">
            <div class="w-full">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="grid grid-cols-2 gap-4 border p-6 rounded-lg bg-white w-full">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Name" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Email" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Password" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Phone" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mobile" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Mobile" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Role" class="control-label block text-xl font-semibold"></label>
                            <select asp-for="Role" class="form-control mt-1 w-full border rounded p-2 bg-gray-50">
                                <option value="">Select Role</option>
                                @foreach (var role in Enum.GetValues(typeof(JobRecorderNet.Models.UserRole)))
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <!-- Address Section -->
                        <fieldset class="border p-4 rounded col-span-2">
                            <legend class="text-xl font-semibold">User Address</legend>
                            <div class="form-group">
                                <label asp-for="Address.Name" class="control-label block text-xl font-semibold">
                                    Type <span style="font-size: smaller;" class="text-gray-500">(e.g. Home or Main Office)</span>
                                </label>
                                <input asp-for="Address.Name" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                                <span asp-validation-for="Address.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address.Street" class="control-label block text-xl font-semibold"></label>
                                <input asp-for="Address.Street" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                                <span asp-validation-for="Address.Street" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address.Suburb" class="control-label block text-xl font-semibold"></label>
                                <input asp-for="Address.Suburb" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                                <span asp-validation-for="Address.Suburb" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address.State" class="control-label block text-xl font-semibold">State</label>
                                <select asp-for="Address.State" class="form-control mt-1 w-full border rounded p-2 bg-gray-50 gap-4">
                                    <option value="">Select State</option>
                                    <option value="NSW">New South Wales</option>
                                    <option value="QLD">Queensland</option>
                                    <option value="SA">South Australia</option>
                                    <option value="TAS">Tasmania</option>
                                    <option value="VIC">Victoria</option>
                                    <option value="WA">Western Australia</option>
                                    <option value="ACT">Australian Capital Territory</option>
                                    <option value="NT">Northern Territory</option>
                                </select>
                                <span asp-validation-for="Address.State" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address.Postcode" class="control-label block text-xl font-semibold"></label>
                                <input asp-for="Address.Postcode" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                                <span asp-validation-for="Address.Postcode" class="text-danger"></span>
                            </div>
                        </fieldset>
                        <div class="col-span-2">
                            <div class="flex form-group w-full justify-center">
                                <input type="submit" value="Add User"
                                    class="btn btn-primary cursor-pointer bg-green-600 hover:bg-green-700 transition duration-300 text-white px-6 py-2 rounded" />
                            </div>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</body>