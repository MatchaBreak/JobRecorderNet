@model JobRecorderNet.Models.User

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="flex flex-col items-center w-full">
        <div class="w-full pb-3 rounded-lg pt-6">
            <div class="flex flex-col lg:flex-row justify-between items-center gap-4">
                <h1 class="text-3xl font-semibold">Edit User</h1>
                <a class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition duration-300"
                    asp-action="Index">Back to Users</a>
            </div>
        </div>

        <hr />
        <div class="w-full border p-4">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="flex flex-col gap-2">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Name" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Email" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        @* <div class="form-group">
                            <label asp-for="Password" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Password" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div> *@
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Phone" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mobile" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Mobile" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Address" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Role" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="Role" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="form-group hidden">
                            <label asp-for="CreatedAt" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="CreatedAt" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>
                        <div class="form-group hidden">
                            <label asp-for="UpdatedAt" class="control-label block text-xl font-semibold"></label>
                            <input asp-for="UpdatedAt" class="form-control mt-1 w-full border rounded p-2 bg-gray-50" />
                            <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                        </div>
                        <div class="flex justify-center gap-2 pt-5">
                            <div class="form-group">
                                <input type="submit" value="Save"
                                    class="btn btn-primary cursor-pointer bg-yellow-400 hover:bg-yellow-500 transition duration-300 text-black px-6 py-2 rounded" />
                            </div>
                            @* <div class="form-group">
                            <input type="" value="Delete?" class="btn btn-primary bg-red-600 hover:bg-red-700 transition duration-300 text-white px-4 py-2 rounded"/>
                        </div> *@
                        </div>

                    </div>
                </form>
            </div>
        </div>


    </div>
</body>
