@model JobRecorderNet.Models.Address

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="flex flex-col items-center w-full">
        <div class="w-full pb-3 rounded-lg pt-6">
            <div class="flex justify-between items-center">
                <h1 class="text-3xl font-semibold">Address Details</h1>
                <a class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition duration-300" asp-action="Index">Back to Addresses</a>
            </div>
        </div>
        <div class="relative flex-col w-full border p-4 rounded-md">
            <p class="text-2xl font-semibold">@Html.DisplayFor(model => model.Name)'s Addresses:</p>
            <div class="absolute top-4 right-4 space-x-2">
                <a class="btn bg-yellow-500 hover:bg-yellow-600 transition duration-300 px-2 py-1 rounded" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            </div>
            <dl class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Name) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.Name) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Street) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.Street) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Suburb) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.Suburb) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.State) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.State) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Postcode) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.Postcode) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.IsMain) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.IsMain) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.CreatedAt) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.CreatedAt) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.UpdatedAt) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.UpdatedAt) </dd>
                </div>
            </dl>
        </div>
    </div>
</body>
