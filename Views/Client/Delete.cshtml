@model JobRecorderNet.Models.Client

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="flex flex-col items-center w-full">
        <div class="w-full pb-3 rounded-lg pt-6">
            <div class="flex justify-between items-center">
                <h1 class="text-3xl font-semibold">Client Details</h1>
                <div
                    class="flex flex-col items-center bg-gradient-to-r from-red-300/75 to-grey-200/75 p-6 rounded-lg shadow-lg w-full md:w-auto self-start border-l-4 border-red-600">
                    <h1 class="text-xl font-semibold">Are you sure you want delete this Client?</h1>
                    <p class="text-sm text-gray-500">Deletion cannot be reverted</p>
                </div>
                <a class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition duration-300"
                    asp-action="Index">Back to Clients</a>
            </div>
        </div>

        <div class="relative flex-col w-full border p-4 rounded-md">
            <div class="absolute top-4 right-4 space-x-2">
                <a class="btn bg-yellow-400 hover:bg-yellow-500 transition duration-300 px-2 py-1 rounded"
                    asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            </div>
            <dl class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Name) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.Name) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Email) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.Email) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Phone) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.Phone) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Mobile) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.Mobile) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.CreatedAt) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.CreatedAt) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.UpdatedAt) </dt>
                    <dd class="overflow-hidden truncate"> @Html.DisplayFor(model => model.UpdatedAt) </dd>
                </div>
            </dl>

            <form class="flex form-group w-full justify-center pt-5" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete Client"
                    class="btn btn-danger cursor-pointer bg-red-600 hover:bg-red-700 transition duration-500 text-white px-6 py-2 rounded" />
            </form>
        </div>
    </div>
</body>