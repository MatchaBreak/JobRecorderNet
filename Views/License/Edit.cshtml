@model JobRecorderNet.Models.License

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="flex flex-col items-center w-full">
        <div class="w-full pb-3 rounded-lg pt-6">
            <div class="flex flex-col lg:flex-row justify-between items-center gap-4">
                <h1 class="text-3xl font-semibold">Edit Licence:</h1>
                <a class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition duration-300"
                    asp-action="Index">Back to Licences</a>
            </div>
        </div>
        <div class="w-full border p-4">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="flex flex-col gap-2">
                        <div class="form-group">
                            <label asp-for="Type" class="control-label"></label>
                            <select asp-for="Type" class="form-control"></select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Expiry" class="control-label"></label>
                            <input asp-for="Expiry" class="form-control" />
                            <span asp-validation-for="Expiry" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatedAt" class="control-label"></label>
                            <input asp-for="CreatedAt" class="form-control" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedAt" class="control-label"></label>
                            <input asp-for="UpdatedAt" class="form-control" />
                            <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                        </div>
                        <div action="flex justify-center gap-2 pt-5">
                            <div class="form-group">
                                <input type="submit" value="Save"
                                    class="btn btn-primary cursor-pointer bg-yellow-400 hover:bg-yellow-500 transition duration-300 text-black px-6 py-2 rounded" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
