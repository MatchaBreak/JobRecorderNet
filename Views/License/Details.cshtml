@model JobRecorderNet.Models.License

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="flex flex-col items-center w-full">
        <div class="w-full pb-3 rounded-lg pt-6">
            <div class="flex flex-col lg:flex-row justify-between items-center gap-4">
                <h1 class="text-3xl font-semibold">Licence Details</h1>
                <a class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition duration-300"
                    asp-action="Index">Back to Licences</a>
            </div>
        </div>

        <div class="relative flex-col w-full border p-4 rounded-md">
            <p class="text-2xl font-semibold">Licence Info:</p>
            <div class="absolute top-4 right-4 space-x-2">
                <a class="btn bg-yellow-400 hover:bg-yellow-500 transition duration-300 px-2 py-1 rounded"
                    asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            </div>
            <dl class="row">
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Type) </dt>
                    <dd class="overflow-hidden truncat"> @Html.DisplayFor(model => model.Type) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.Expiry) </dt>
                    <dd class="overflow-hidden truncat"> @Html.DisplayFor(model => model.Expiry) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.CreatedAt) </dt>
                    <dd class="overflow-hidden truncat"> @Html.DisplayFor(model => model.CreatedAt) </dd>
                </div>
                <div>
                    <dt class="text-xl"> @Html.DisplayNameFor(model => model.UpdatedAt) </dt>
                    <dd class="overflow-hidden truncat"> @Html.DisplayFor(model => model.UpdatedAt) </dd>
                </div>
            </dl>
        </div>
    </div>
</body>
